                <p class="dato">$<%= producto.price %></p>
                <p class="name-dato">Descuento</p>             
                <p class="dato"> <%= producto.descuento %>% </p>
                <button type="submit">Agregar al Carrito</button>
            </article>
        </section>
        <section class="description">
             <article>
                <h2>Descripci√≥n de producto</h2>
                <p><%= producto.descrition %></p>
            </article>
        </section>
    </main>
    <%- include('../partials/footer') %> 
</body>
</html>